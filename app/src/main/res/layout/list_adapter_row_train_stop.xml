<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/small_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_adapter_row_train_stop_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:text="CANCELLATA"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/list_adapter_row_train_stop_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="@dimen/small_margin"
            android:text="Terme Euganee Abano"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/list_adapter_row_train_stop_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:text="Bin: 1" />
    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        grid:columnCount="3"
        grid:rowCount="2">

        <!-- ROW 0 -->
        <TextView
            android:id="@+id/list_adapter_row_train_stop_arrival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:text="Arrivo: 17:10"
            grid:layout_column="0"
            grid:layout_columnWeight="3"
            grid:layout_row="0" />

        <TextView
            android:id="@+id/list_adapter_row_train_stop_arrival_delay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:text="Ritardo: +3"
            grid:layout_column="1"
            grid:layout_columnWeight="2"
            grid:layout_row="0" />

        <TextView
            android:id="@+id/list_adapter_row_train_stop_arrival_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:text="Arrivato"
            android:textAlignment="viewStart"
            grid:layout_column="2"
            grid:layout_columnWeight="2"
            grid:layout_row="0" />


        <!-- ROW 1 -->
        <TextView
            android:id="@+id/list_adapter_row_train_stop_departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:text="Partenza: 17:10"
            grid:layout_column="0"
            grid:layout_columnWeight="3"
            grid:layout_row="1" />

        <TextView
            android:id="@+id/list_adapter_row_train_stop_departure_delay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:text="Ritardo: +3"
            android:textAlignment="textStart"
            grid:layout_column="1"
            grid:layout_columnWeight="2"
            grid:layout_row="1" />

        <TextView
            android:id="@+id/list_adapter_row_train_stop_departure_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:text="Partito"
            android:textAlignment="textStart"
            grid:layout_column="2"
            grid:layout_columnWeight="2"
            grid:layout_row="1" />

    </android.support.v7.widget.GridLayout>

</LinearLayout>