<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_margin"
    grid:rowCount="1"
    grid:columnCount="2">

    <TextView
        android:id="@+id/train_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/small_margin"
        android:text="REG 2233"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        grid:layout_column="0"
        grid:layout_columnWeight="3"
        grid:layout_rowWeight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        grid:layout_columnWeight="5"
        grid:layout_column="1">

        <TextView
            android:id="@+id/train_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Da Padova (13:10)" />

        <TextView
            android:id="@+id/train_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verso Rovigo (17:49)" />
    </LinearLayout>
</android.support.v7.widget.GridLayout>