<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manzolik.gmanzoli.mytrains.components.TrainStatusFragment"
    android:padding="@dimen/medium_margin">


    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/train_status_fragment_refresh"
        android:layout_margin="0dp"
        android:padding="0dp">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/train_status_fragment_card_view"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="4dp"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginStart="0dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/medium_margin"
                android:paddingTop="@dimen/medium_margin"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingRight="@dimen/medium_margin">

                <!-- Identificativo treno -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/train_code_placeholder"
                    android:id="@+id/train_status_fragment_train_code"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <!-- Ritardo treno -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/train_delay_placeholder"
                    android:id="@+id/train_status_fragment_delay"
                    android:layout_alignBottom="@+id/train_status_fragment_train_code"
                    android:layout_toEndOf="@+id/train_status_fragment_train_code"
                    android:layout_marginStart="@dimen/medium_margin"/>

                <!-- Header: Stazione di partenza -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Stazione di partenza"
                    android:id="@+id/train_status_fragment_dept_header"
                    android:layout_below="@+id/train_status_fragment_train_code"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/medium_margin"/>

                <!-- Stazione di partenza -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/train_last_station"
                    android:id="@+id/train_status_fragment_departure_station"
                    android:layout_below="@+id/train_status_fragment_dept_header"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/small_margin"/>

                <!-- Header: Ultimo rilevamento -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Ultimo rilevamento"
                    android:id="@+id/train_status_fragment_last_seen"
                    android:layout_below="@+id/train_status_fragment_departure_station"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/medium_margin"/>

                <!-- Ultimo rilevamento-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/train_last_station"
                    android:id="@+id/train_status_fragment_last_update"
                    android:layout_below="@+id/train_status_fragment_last_seen"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/small_margin"/>


                <!-- Header: Stazione di arrivo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Stazione di arrivo"
                    android:id="@+id/train_status_fragment_expected_arrive"
                    android:layout_below="@+id/train_status_fragment_last_update"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/medium_margin"/>

                <!-- Stazione di arrivo-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/train_last_station"
                    android:id="@+id/train_status_fragment_station"
                    android:layout_below="@+id/train_status_fragment_expected_arrive"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/small_margin"/>



            </RelativeLayout>



        </android.support.v7.widget.CardView>
    </android.support.v4.widget.SwipeRefreshLayout>




</FrameLayout>
