<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manzolik.gmanzoli.mytrains.components.FindStationFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/find_station_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:hint="Nome della stazione"
        android:paddingEnd="@dimen/large_margin"
        android:paddingStart="@dimen/large_margin"/>

    <ListView
        android:id="@+id/find_station_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin" />

    <ProgressBar
        android:id="@+id/find_station_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin" />

    <TextView
        android:id="@+id/find_station_not_found_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="@string/no_result"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Body2" />

</LinearLayout>
