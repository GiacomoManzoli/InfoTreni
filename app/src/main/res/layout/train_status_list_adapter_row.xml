<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginBottom="@dimen/small_margin"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginEnd="@dimen/small_margin"
    android:layout_marginStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/medium_margin"
        android:paddingTop="@dimen/medium_margin"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingRight="@dimen/medium_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/train_code_placeholder"
            android:id="@+id/train_status_list_adapter_row_train_code"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/train_delay_placeholder"
            android:id="@+id/train_status_list_adapter_row_delay"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/train_last_station"
            android:id="@+id/train_status_list_adapter_row_last_update"
            android:layout_below="@+id/train_status_list_adapter_row_train_code"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/small_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/train_last_time"
            android:id="@+id/train_status_list_adapter_row_last_time_update"
            android:layout_below="@+id/train_status_list_adapter_row_delay"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/small_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/train_last_station"
            android:id="@+id/train_status_list_adapter_row_station"
            android:layout_below="@+id/train_status_list_adapter_row_last_update"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/small_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/train_last_time"
            android:id="@+id/train_status_list_adapter_row_target_time"
            android:layout_below="@+id/train_status_list_adapter_row_last_time_update"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/small_margin"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>



